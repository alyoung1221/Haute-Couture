@model Project1.Models.Category

@{
    ViewBag.Title = "Delete " + Model.CategoryName;
}
<h3>Are you sure you want to delete this category?</h3>
<i><b>Note</b>: All products associated with the category will be deleted.</i>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.CategoryName)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.CategoryName)
    </dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" />
    </div>
}
<br />
<div>
    <a href="@Url.Action("Details", new { id = Model.Path })">Return to category</a>
</div>